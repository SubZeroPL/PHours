<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<TabPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
         minWidth="-Infinity"
         prefHeight="141.0" prefWidth="320.0" tabClosingPolicy="UNAVAILABLE"
         xmlns="http://javafx.com/javafx/8.0.172-ea" fx:controller="org.linkuei.Controller">
    <Tab closable="false" text="Work Time">
        <GridPane prefHeight="140.0" prefWidth="320.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="NEVER"/>
                <RowConstraints vgrow="NEVER"/>
                <RowConstraints vgrow="NEVER"/>
                <RowConstraints maxHeight="1.7976931348623157E308" vgrow="NEVER"/>
            </rowConstraints>
            <ProgressBar fx:id="progress" maxWidth="1.7976931348623157E308" progress="1.0" GridPane.rowIndex="1"/>
            <Label fx:id="lblTime" text="00:00:00" textAlignment="CENTER" textOverrun="CLIP"
                   GridPane.halignment="CENTER">
                <font>
                    <Font name="Courier New" size="40.0"/>
                </font>
                <contextMenu>
                    <ContextMenu>
                        <items>
                            <Menu mnemonicParsing="false" text="Set time">
                                <MenuItem fx:id="mi8h" mnemonicParsing="false" onAction="#miSetTime" text="8h"
                                          userData="8"/>
                                <MenuItem fx:id="mi7h" mnemonicParsing="false" onAction="#miSetTime" text="7h"
                                          userData="7"/>
                                <MenuItem fx:id="miCustom" mnemonicParsing="false" onAction="#miSetTime" text="Custom"
                                          userData="0"/>
                            </Menu>
                            <MenuItem mnemonicParsing="false" onAction="#miReset" text="Reset"/>
                        </items>
                    </ContextMenu>
                </contextMenu>
            </Label>
            <Button fx:id="btnStart" defaultButton="true" onAction="#btnStart" text="_Start"
                    GridPane.halignment="CENTER" GridPane.rowIndex="3"/>
        </GridPane>
    </Tab>
    <Tab closable="false" text="Hours">
        <GridPane alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="197.0" minWidth="10.0" prefWidth="197.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="154.0" minWidth="10.0" prefWidth="123.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Label text="Status:" textAlignment="CENTER" GridPane.halignment="CENTER">
                <font>
                    <Font size="24.0"/>
                </font>
            </Label>
            <Label fx:id="lblStatus" text="0h" textAlignment="CENTER" GridPane.halignment="CENTER"
                   GridPane.rowIndex="1">
                <font>
                    <Font size="24.0"/>
                </font>
            </Label>
            <Button fx:id="btnAdd" onAction="#btnAdd" text="_Add" userData="1" GridPane.columnIndex="1"
                    GridPane.halignment="CENTER"/>
            <Button fx:id="btnRemove" onAction="#btnAdd" text="_Remove" userData="2" GridPane.columnIndex="1"
                    GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
        </GridPane>
    </Tab>
    <Tab closable="false" text="Configuration">
        <GridPane>
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Label text="Time up message:"/>
            <TextField fx:id="timeUpMessage" text="IT go home" GridPane.columnIndex="1">
                <GridPane.margin>
                    <Insets left="5.0" right="5.0"/>
                </GridPane.margin>
            </TextField>
            <Label text="Show notification every:" GridPane.rowIndex="1"/>
            <GridPane GridPane.columnIndex="1" GridPane.rowIndex="1">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <Spinner fx:id="spinMinutes" editable="true">
                    <valueFactory>
                        <SpinnerValueFactory.IntegerSpinnerValueFactory amountToStepBy="1" max="120" min="0"/>
                    </valueFactory>
                    <GridPane.margin>
                        <Insets left="5.0" right="5.0"/>
                    </GridPane.margin>
                </Spinner>
                <Label text="minutes" GridPane.columnIndex="1"/>
            </GridPane>
        </GridPane>
    </Tab>
</TabPane>
